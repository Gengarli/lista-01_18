import java.util.Scanner;

class Main {
  
  public static void main(String[] args) {
     
     Scanner teclado = new Scanner(System.in);
     
      System.out.print("Informe o tamanho de um arquivo para download em MB: ");
       double m = teclado.nextDouble();

      System.out.print("Informe a velocidade de sua conexão: ");
       double v = teclado.nextDouble();


        double r = m/v;

        double t = r/60;

    
      System.out.println("Com está velocidade você terminará o download em: " + t + "!");
      teclado.close();
     }
}
